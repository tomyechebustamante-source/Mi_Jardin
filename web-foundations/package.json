 {
	"name": "web-foundations",
	"version": "1.0.0",
	"description": "Canonical lessons and methodology for WEB ATELIER (UDIT)",
	"private": true,
	"scripts": {
		"postcss:build": "postcss docs/assets/css/tailwind.css -o docs/assets/css/tailwind-processed.css",
		"postcss:watch": "postcss docs/assets/css/tailwind.css -o docs/assets/css/tailwind-processed.css --watch",
		"normalize:ids": "node scripts/normalize-ids.mjs",
		"mark-broken-links": "node scripts/mark-broken-links.mjs",
		"develop": "npm run postcss:build && bundle exec jekyll serve --source docs --livereload --config _config.yml",
		"build": "npm run postcss:build && bundle exec jekyll build --source docs --destination _site --config _config.yml",
		"wrap:i18n": "node scripts/wrap-frontmatter-i18n.mjs",
		"validate:lessons": "yaml-lint docs/_data/lessons.yml",
		"validate:yaml": "find docs/_data -name '*.yml' -exec yaml-lint {} \\;",
		"wrap:lessons": "node ../scripts/wrap-lessons.mjs",
		"href-tester": "node scripts/href-tester.mjs"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.19",
		"autoprefixer": "^10.4.21",
		"cheerio": "^1.1.2",
		"cssnano": "^7.1.2",
		"fs-extra": "^11.2.0",
		"glob": "^10.3.10",
		"gray-matter": "^4.0.3",
		"js-yaml": "^4.1.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"slugify": "^1.6.6",
		"tailwindcss": "^3.4.18",
		"yaml-lint": "^1.7.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ruvebal/web-atelier-udit.git",
		"directory": "web-foundations"
	},
	"author": "Rubén Vega Balbás, PhD",
	"license": "MIT"
}
