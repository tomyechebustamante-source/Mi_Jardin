visualization:
 description: 'Schema for rendering TTOD as interactive 3D knowledge graph'

 # Node positioning strategy
 layout:
  algorithm: 'force-directed-3d' # Three.js + d3-force-3d
  clustering: 'section' # Primary cluster by section
  z_axis: 'level' # Z-depth by mastery level
  node_size: 'connection_count' # Size by relationships

 # Color encoding
 encoding:
  node_color: 'section'
  node_opacity: 'level_weight'
  edge_color: 'relationship_type'
  edge_width: 'strength'

 # Relationship types for edges
 relationship_types:
  - id: 'same_subsection'
    label: 'Same Topic'
    color: '#94a3b8'
    strength: 0.8
  - id: 'same_lesson'
    label: 'Same Lesson'
    color: '#60a5fa'
    strength: 0.9
  - id: 'semantic_link'
    label: 'Related Concept'
    color: '#34d399'
    strength: 0.5
  - id: 'progression'
    label: 'Learning Path'
    color: '#fbbf24'
    strength: 0.7
  - id: 'contrast'
    label: 'Opposing View'
    color: '#f87171'
    strength: 0.4

 # Export formats for visualization tools
 export_formats:
  - json_graph # D3.js compatible
  - gexf # Gephi
  - graphml # yEd, Cytoscape
  - csv_edges # Spreadsheet analysis

 # 3D rendering options
 three_js_options:
  camera_distance: 1500
  fog_near: 1000
  fog_far: 3000
  particle_size: 8
  link_opacity: 0.3
  bloom_enabled: true
  bloom_strength: 0.5

