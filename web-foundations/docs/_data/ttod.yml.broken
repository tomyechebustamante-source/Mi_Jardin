templates:
 blockquote: |
  <blockquote class="ttod-quote" data-section="{{ quote.section }}" data-level="{{ quote.level }}">
    <p>{{ quote.text }}</p>
    <footer>â€” The Tao of Development</footer>
  </blockquote>

 card: |
  <div class="ttod-card ttod-{{ quote.section }}">
    <span class="ttod-icon">é“</span>
    <p class="ttod-text">{{ quote.text }}</p>
    <div class="ttod-meta">
      <span class="ttod-section">{{ quote.section }}</span>
      <span class="ttod-level">{{ quote.level }}</span>
    </div>
  </div>

 tooltip:
  '{{ quote.text }} â€” é“'

  # 3D visualization node template
 viz_node: |
  {
    "id": "{{ quote.id }}",
    "label": "{{ quote.id }}",
    "section": "{{ quote.section }}",
    "subsection": "{{ quote.subsection }}",
    "level": "{{ quote.level }}",
    "level_weight": {{ site.data.ttod.meta.levels[quote.level].weight }},
    "color": "{{ site.data.ttod.meta.sections | where: 'id', quote.section | map: 'color' | first }}",
    "tags": {{ quote.tags | jsonify }},
    "related": {{ quote.related | default: empty_array | jsonify }}
  }

